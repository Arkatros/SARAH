generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  lastName  String
  email     String    @unique
  phone     String
  password  String?
  role      String   @default("USER")
  midwife   Midwife?  @relation("MidwifeToUser")
  // patient   Patient? @relation("PatientToUser")
  addresses Address[]
}


model Midwife {
  id                 Int     @id @default(autoincrement())
  APC                String
  registrationNumber String
  employerName       String
  isActive           Boolean
  userId             Int     @unique
  user               User    @relation("MidwifeToUser", fields: [userId], references: [id])
}

model Address {
  id      Int    @id @default(autoincrement())
  number  String
  zipCode Int
  city    String
  country String
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
}
